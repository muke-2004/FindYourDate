<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Room</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://unpkg.com/@knadh/oat/oat.min.css">
    
  </head>
  <body>

    <%- include("partials/nav") %>

    <div class="d-flex flex-column gap-3  mx-3 my-2">
        <%if(user.face_matches.length === 0){%>
          <div class="alert alert-warning" role="alert">
            Alert! - No users were found with a face similar to the generated AI image
          </div>
        <%}%>

        <%user.face_matches.forEach((chat)=>{%>

           <a href="/myroomchat/<%=chat.room_Id%>" class="text-decoration-none text-dark">

            <div class="border rounded">

              <%if(chat.matched_user_id != null ){%>
               
                <img class="rounded-circle p-2 " style="width: 90px; height:90px;"  src="/uploads/<%=chat.matched_user_id.profile_photo%>" 
                    alt="userA_profile_photo"
                >
                <strong>
                  <%=chat.matched_user_id.name%>
                </strong>
  
              <%}%>
            </div>
           </a>
        <%})%>
    </div>

     <script src="https://unpkg.com/@knadh/oat/oat.min.js" defer></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
